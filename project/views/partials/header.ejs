<div id="header" class="header">
    <% if (!user) { %>
    <a style="display: inline-block;margin-right: 20px;float: right;margin-top: 1em;" href="/login">LogIn</a>
    <% } else { %>
    <span style="display: inline-block;margin-right: 20px;float: right;margin-top: 1em;">Hi, <%= user.username %></span>
    <a style="display: inline-block;margin-right: 20px;float: right;margin-top: 1em;" href="/logout">Logout</a>
    <% } %>
    <a style="display: inline-block;margin-right: 20px;float: right;margin-top: 1em;" href="/home">Home</a>
</div>